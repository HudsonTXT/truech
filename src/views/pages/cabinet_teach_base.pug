extends ../layouts/cabinet


block variables
    - const title = "Основная информация"
    - var status = "teach"

block content
    .cabinet__head
        h4 Основная информация
        //.actions
        //    a(href="#").btn.btn--xs Soma Action

    form
        +Input('text', 'cabinet_description', '', 'Слоган школы')
