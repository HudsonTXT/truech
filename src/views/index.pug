extends layouts/default


block variables
	- const title = "Главная"

block content
	+Promoblock

	section#categories.s-margins
		.container
			.section__head
				h4 Популярные категории
				.actions
					a(href="courses_categories.html").action--showmore Смотреть все
						i.fa.fa-chevron-right

			.row
				.col-4.col-xs-1.col-m-2
					+Card('categories', {icon: 'layer-group', title: "Веб-дизайн", nums: 41})
