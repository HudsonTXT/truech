					.item
						//.col-4.col-xs-1.col-m-2
						+Card('promo', {img: 'img/1.jpg', title: 'Идеальный Landing Page', rating: '8.2', nums: "34"})


	section#speakers.s-margins
		.container
			.section__head
				h4 Топ спикеров
				.actions
					a(href="speakers_list.html").action--showmore Смотреть все
						i.fa.fa-chevron-right
			.courses__carousel--wrapper.slider--nav-blue
				.speakers__carousel
					.item
						+Card('speaker', {img: 'img/u1.jpg', title: 'Николай Борисов', descriptor: 'SkillBox', tags: ["Дизайн", "Маркетинг", "Программирование", "Бизнес"],  rating: '9.9', reviews: 456, courses: 23})

					.item
