					+Card('categories', {icon: 'swatchbook', title: "Инженерный дизайн", nums: 35})
				.col-4.col-xs-1.col-m-2
					+Card('categories', {icon: 'suitcase', title: "Бизнес", nums: 51})
				.col-4.col-xs-1.col-m-2.only-desktop
					+Card('categories', {icon: 'brain', title: "Искусственный интеллект", nums: 10})
